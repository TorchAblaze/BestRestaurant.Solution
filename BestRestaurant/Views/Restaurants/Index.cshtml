@{
  Layout = "_Layout";
}

@using BestRestaurant.Models;
@model List<BestRestaurant.Models.Restaurant>;

<h1>Restaurant</h1>

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
} 
else
{
  <ol>
  @foreach (Restaurant restaurant in Model)
  {
    <li>@restaurant.Name</li>
    <ul>
      <li>@Html.ActionLink($"Restaurant ID: {restaurant.RestaurantId}", "Details", new { id = restaurant.RestaurantId }) | Restaurant ID: @restaurant.RestaurantId</li>
    </ul>
    <br>
  }
  </ol>
}

<p>@Html.ActionLink("Add new restaurant", "Create")</p>