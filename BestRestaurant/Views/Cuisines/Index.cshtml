@{
  Layout = "_Layout";
}

@using BestRestaurant.Models;
@model List<BestRestaurant.Models.Cuisine>;

<h1>Cuisine</h1>

@if (@Model.Count == 0)
{
  <h3>No cuisines have been added yet!</h3>
} 
else
{
  <ul>
  @foreach (Cuisine cuisine in Model)
  {
    <li>@Html.ActionLink($"{cuisine.Type}", "Details", new { id = cuisine.CuisineId }) | @cuisine.Type</li>
    <li>@Html.ActionLink($"{cuisine.Entrees}", "Entrees", new { id = cuisine.CuisineId }) | @cuisine.Entrees</li>
  }
  </ul>
}

<p>@Html.ActionLink("Add new cuisine", "Create")</p>