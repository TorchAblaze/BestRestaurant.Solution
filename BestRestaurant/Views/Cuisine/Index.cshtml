@{
  Layout = "_Layout";
}

@using BestRestaurant.Models;
@model List<BestRestaurant.Models.Cuisine>;

<h1>Cuisine</h1>

@if (@Model.Count == 0)
{
  <h3>No cuisine have been added yet!</h3>
} 

@foreach (Cuisine cuisine in Model)
{
  <li>@Html.ActionLink($"{cuisine.Description}", "Details", new { id = cuisine.CuisineId }) | @cuisine.Category.Name</li>
}

<p>@Html.ActionLink("Add new cuisine", "Create")</p>